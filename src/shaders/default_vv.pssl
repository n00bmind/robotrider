struct VS_INPUT
{
	float3 position		: POSITION0;
	float4 color		: COLOR0;
	float2 texCoords	: TEXCOORD0;
};

struct VS_OUTPUT
{
	float4 position		: S_POSITION;
	float4 color		: COLOR0;
	float2 texCoords	: TEXCOORD1;
};

#pragma pack_matrix (row_major)

ConstantBuffer ShaderConstants
{
    matrix mTransform;
};


VS_OUTPUT main( VS_INPUT _in )
{
	VS_OUTPUT _out;

	_out.position = mul(mTransform, float4(_in.position.xyz, 1));
	_out.color = _in.color;
	_out.texCoords = _in.texCoords;

	return _out;
}
